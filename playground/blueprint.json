{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/events-search/",
  "steps": [
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "advanced-custom-fields"
      },
      "options": { "activate": true }
    },
    {
      "step": "writeFile",
      "path": "/tmp/event-manager.zip",
      "data": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/Kodecky/event-manager/main/event-manager.zip"
      }
    },
    {
      "step": "unzip",
      "zipPath": "/tmp/event-manager.zip",
      "extractTo": "/wp-content/plugins"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "event-manager/event-manager.php"
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/Kodecky/event-manager/main/playground/content.wxr.xml"
      }
    }
  ]
}
